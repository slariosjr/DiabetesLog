<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbgandroid"
    android:alpha="0.988"
    tools:context=".RegisterUser">


    <TextView
        android:id="@+id/SignUpTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_margin="45dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/FirstNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_below="@id/SignUpTextView"
        android:layout_margin="15dp"

        />
    <EditText
        android:id="@+id/LastNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_below="@id/FirstNameSignUp"
        android:layout_margin="13dp"
        />

    <EditText
        android:id="@+id/UserNameSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LastNameSignUp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="13dp"
        android:hint="Username" />
    <EditText
        android:id="@+id/PasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="13dp"
        android:layout_below="@id/UserNameSignUp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Sign Up"
        android:layout_margin="24dp"
        android:layout_below="@id/PasswordSignUp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />




</RelativeLayout>