<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbgandroid"

    tools:context=".MainAdminLogin">

    <TextView
        android:id="@+id/AdminMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin"
        android:textSize="32sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:padding="50dp">
    </TextView>

    <Button
        android:id="@+id/AdminMainLogBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/AdminMainTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Logs"></Button>



    <Button
        android:id="@+id/AdminMainCarbsBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/AdminMainLogBtn"
        android:layout_centerHorizontal="true"
        android:text="Carb Counter"
        android:layout_margin="15dp">

    </Button>

    <Button
        android:id="@+id/AdminMainAppointmentBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/AdminMainCarbsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:text="Appointments"
        android:textSize="11sp"></Button>

    <Button
        android:id="@+id/AdminMainNewsBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="News"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/AdminMainAppointmentBtn"
        android:layout_margin="15dp">
    </Button>
    <Button
        android:id="@+id/AdminMainAdminOptionsBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Admin Options"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/AdminMainNewsBtn"
        android:layout_margin="15dp">
    </Button>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/AdminMainLogoutBtn"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="754dp"
        >

    </com.google.android.material.button.MaterialButton>






</RelativeLayout>